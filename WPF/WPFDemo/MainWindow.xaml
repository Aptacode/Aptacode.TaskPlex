<Window x:Class="WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        xmlns:wpfGraphics="clr-namespace:WPFGraphics;assembly=WPFGraphics"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="720">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Click="ButtonBase_OnClick" Grid.Row="0">start</Button>
        <Border BorderBrush="Black" BorderThickness="2" Grid.Row="1" Margin="10">
            <wpfGraphics:TaskPlexCanvas x:Name="TaskPlexCanvas" />
        </Border>
    </Grid>
</Window>